    private void jLabel1KeyPressed(java.awt.event.KeyEvent evt) {                                   

        
    }                                  

      private void formKeyPressed(java.awt.event.KeyEvent evt) {                                

        int horizontal = jLabel1.getX();
        int vertical= jLabel1.getY();
        int findBallY= Ball.getY();
        int findBallX=Ball.getX();
        if (evt.getKeyCode()==evt.VK_LEFT){
            //if the left arrow key is pressed
            if (horizontal>0){
            jLabel1.setLocation(horizontal-1, vertical);
        }
        }
        else if (evt.getKeyCode()==evt.VK_RIGHT){
            //if the right arrow key is pressed
            if (horizontal<540){
            jLabel1.setLocation(horizontal+1,vertical);
        }
        }
        else if (evt.getKeyCode()==evt.VK_SPACE){
            Ball.setLocation (horizontal, vertical);
        }
    }                               

    private void formKeyReleased(java.awt.event.KeyEvent evt) {                                 
        int findBallY= Ball.getY();
        int findBallX=Ball.getX();
        if (evt.getKeyCode()==evt.VK_SPACE){
            Ball.setVisible(true);
            Ball.setLocation (findBallX,findBallY+5); 
     }
    }                                

